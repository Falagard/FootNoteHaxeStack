<!-- Page List Layout -->
<vbox percentWidth="100" percentHeight="100" styleName="pageListView">
  <hbox percentWidth="100">
    <label text="CMS Pages" styleName="pageTitle" />
    <spacer percentWidth="100" />
    <button id="createPageBtn" text="Create New Page" icon="icons/add.png" />
    <button id="refreshBtn" text="Refresh" icon="icons/refresh.png" />
  </hbox>
  
  <scrollview percentWidth="100" percentHeight="100">
    <vbox id="pageGrid" percentWidth="100" />
  </scrollview>
  
  <!-- Create Page Dialog (inline) -->
  <dialog id="createDialog" width="400" title="Create New Page" hidden="true">
    <vbox percentWidth="100">
      <hbox percentWidth="100">
        <label text="Slug:" width="100" />
        <textfield id="slugField" percentWidth="100" placeholder="page-slug" />
      </hbox>
      <hbox percentWidth="100">
        <label text="Title:" width="100" />
        <textfield id="titleField" percentWidth="100" placeholder="Page Title" />
      </hbox>
      <hbox percentWidth="100">
        <spacer percentWidth="100" />
        <button id="cancelCreateBtn" text="Cancel" />
        <button id="confirmCreateBtn" text="Create" />
      </hbox>
    </vbox>
  </dialog>
</vbox>
