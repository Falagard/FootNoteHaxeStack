<!-- Page Editor Dialog Layout -->
<dialog id="pageEditorDialog" width="800" percentHeight="100" styleName="pageEditorDialog" closable="true" buttons="none">
  <hbox percentWidth="100" percentHeight="100">
    
    <!-- Left Panel: Component Palette -->
    <vbox id="palettePanel" width="150" percentHeight="100" styleName="palettePanel">
      <label text="Components" styleName="panelTitle" />
      <vbox id="componentList" percentWidth="100" percentHeight="100" />
    </vbox>
    
    <!-- Center: Canvas -->
    <vbox id="canvasPanel" percentWidth="100" percentHeight="100" styleName="canvasPanel">
      <hbox percentWidth="100">
        <label id="pageTitle" text="Page Editor" styleName="panelTitle" />
        <spacer percentWidth="100" />
        <switch id="previewSwitch" text="Preview Mode" />
        <button id="saveDraftBtn" text="Save Draft" icon="icons/save.png" />
        <button id="publishBtn" text="Publish" icon="icons/publish.png" />
      </hbox>
      
      <scrollview id="canvasScroll" percentContentWidth="100" percentWidth="100" percentHeight="100" styleName="canvas">
        <vbox id="canvas" percentWidth="100" />
      </scrollview>
    </vbox>
    
    <!-- Right Panel: Inspector -->

    
  </hbox>
</dialog>
