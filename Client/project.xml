<?xml version="1.0" encoding="utf-8"?>
<project>

	<meta title="Client" package="com.haxestack.client" version="1.0.0" company="Company Name" />
	<app main="app.Main" path="Export" file="Client" />

	<source path="Source" />
    <source path="../Shared" />
	
	<haxelib name="haxeui-openfl" unless="html5" />
    <haxelib name="haxeui-html5" if="html5" />
	<haxelib name="openfl" />
	<haxelib name="actuate" />
    <haxelib name="SideWinder" />
    <haxelib name="haxe-injection"/>
    <haxelib name="markdown-openfl-textfield"/>
	<assets path="Assets" />

    <define name="api_host" value="http://127.0.0.1:8000" />
    <haxeflag name="--remap" value="sys.thread:app.shim.thread" unless="hl" />
	
	<!-- Post-build copy for HTML5 builds only -->
	<postbuild command="copy-html5-build.bat" if="html5" />
	
</project>